<T3DataStructure>
    <meta type="array">
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <!-- Sheet: Settings -->
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.tab.settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <!-- View -->
                    <switchableControllerActions>
                        <TCEforms>
                            <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.mode</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.mode.listDetail</numIndex>
                                        <numIndex index="1">Faq->list;Faq->detail</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.mode.list</numIndex>
                                        <numIndex index="1">Faq->list</numIndex>
                                    </numIndex>
                                    <numIndex index="3">
                                        <numIndex index="0">LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.mode.detail</numIndex>
                                        <numIndex index="1">Faq->detail</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>

                    <!-- Order field -->
                    <settings.orderField>
                        <TCEforms>
                            <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.orderField</label>
                            <displayCond>FIELD:switchableControllerActions:!=:Faq->detail</displayCond>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.orderField.question</numIndex>
                                        <numIndex index="1">question</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.orderField.sorting</numIndex>
                                        <numIndex index="1">sorting</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.orderField>

                    <!-- Order direction -->
                    <settings.orderDirection>
                        <TCEforms>
                            <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.orderDirection</label>
                            <displayCond>FIELD:switchableControllerActions:!=:Faq->detail</displayCond>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.orderDirection.ascending</numIndex>
                                        <numIndex index="1">asc</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.orderDirection.descending</numIndex>
                                        <numIndex index="1">desc</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.orderDirection>

                    <!-- Query Limit -->
                    <settings.queryLimit>
                        <TCEforms>
                            <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.queryLimit</label>
                            <displayCond>FIELD:switchableControllerActions:!=:Faq->detail</displayCond>
                            <config>
                                <type>input</type>
                                <eval>num</eval>
                                <size>5</size>
                            </config>
                        </TCEforms>
                    </settings.queryLimit>


                    <!-- Category conjunction -->
                    <settings.categoryConjunction>
                        <TCEforms>
                            <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.categoryConjunction</label>
                            <displayCond>FIELD:switchableControllerActions:!=:Faq->detail</displayCond>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.categoryConjunction.ignore</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.categoryConjunction.or</numIndex>
                                        <numIndex index="1">OR</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.categoryConjunction.and</numIndex>
                                        <numIndex index="1">AND</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.categoryConjunction.notor</numIndex>
                                        <numIndex index="1">NOTOR</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.categoryConjunction.notand</numIndex>
                                        <numIndex index="1">NOTAND</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.categoryConjunction>

                    <!-- categories -->
                    <settings.categories>
                        <TCEforms>
                            <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.categories</label>
                            <displayCond>FIELD:switchableControllerActions:!=:Faq->detail</displayCond>
                            <config>
                                <type>select</type>
                                <renderType>selectTree</renderType>
                                <treeConfig>
                                    <parentField>parent</parentField>
                                    <appearance>
                                        <expandAll>true</expandAll>
                                        <showHeader>true</showHeader>
                                    </appearance>
                                </treeConfig>
                                <foreign_table>sys_category</foreign_table>
                                <foreign_table_where> AND sys_category.sys_language_uid IN (-1, 0) ORDER BY sys_category.title ASC</foreign_table_where>
                                <size>10</size>
                                <autoSizeMax>10</autoSizeMax>
                                <minitems>0</minitems>
                                <maxitems>999</maxitems>
                            </config>
                        </TCEforms>
                    </settings.categories>

                    <!-- Include subcategories -->
                    <settings.includeSubcategories>
                        <TCEforms>
                            <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.includeSubcategories</label>
                            <displayCond>FIELD:switchableControllerActions:!=:Faq->detail</displayCond>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.includeSubcategories>

                    <!-- Storage page -->
                    <settings.storagePage>
                        <TCEforms>
                            <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.storagePage</label>
                            <displayCond>FIELD:switchableControllerActions:!=:Faq->detail</displayCond>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>3</size>
                                <maxitems>50</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.storagePage>

                    <!-- recursive -->
                    <settings.recursive>
                        <TCEforms>
                            <label>LLL:EXT:core/Resources/Private/Language/locallang_general.xlf:LGL.recursive</label>
                            <displayCond>FIELD:switchableControllerActions:!=:Faq->detail</displayCond>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.0</numIndex>
                                        <numIndex index="1">0</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.1</numIndex>
                                        <numIndex index="1">1</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.2</numIndex>
                                        <numIndex index="1">2</numIndex>
                                    </numIndex>
                                    <numIndex index="5" type="array">
                                        <numIndex index="0">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.3</numIndex>
                                        <numIndex index="1">3</numIndex>
                                    </numIndex>
                                    <numIndex index="6" type="array">
                                        <numIndex index="0">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.4</numIndex>
                                        <numIndex index="1">4</numIndex>
                                    </numIndex>
                                    <numIndex index="7" type="array">
                                        <numIndex index="0">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.5</numIndex>
                                        <numIndex index="1">250</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.recursive>

                </el>
            </ROOT>
        </sDEF>

        <!-- Sheet: Additional -->
        <additional>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.tab.additional</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <!-- Detail Pid -->
                    <settings.detailPid>
                        <TCEforms>
                            <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.detailPid</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.detailPid>

                    <!-- List Pid -->
                    <settings.listPid>
                        <TCEforms>
                            <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.listPid</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.listPid>

                    <!-- disable overwriteDemand -->
                    <settings.disableOverwriteDemand>
                        <TCEforms>
                            <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.disableOverwriteDemand</label>
                            <displayCond>FIELD:sDEF.switchableControllerActions:!=:Faq->detail</displayCond>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.disableOverwriteDemand>

                </el>
            </ROOT>
        </additional>

        <!-- Sheet: Template -->
        <template>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.tab.template</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <!-- Template Layout -->
                    <settings.templateLayout>
                        <TCEforms>
                            <label>LLL:EXT:plain_faq/Resources/Private/Language/locallang_be.xlf:flexforms.pi1.field.templateLayout</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <itemsProcFunc>Derhansen\PlainFaq\Hooks\TemplateLayouts->userTemplateLayout</itemsProcFunc>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.templateLayout>

                </el>
            </ROOT>
        </template>

    </sheets>
</T3DataStructure>